$yellowBorder = 2px solid $yellow;
$greyColor = #9a9a9a;

.block-jsdoc_engine_jsd
{
    font: 15px Arial, Helvetica, sans-serif;
    padding: 0 10px 10px;

    .block-jsdoc__block-name
    {
        position: relative;

        padding-top: 15px;
        margin-top: 10px;

        border-top: $yellowBorder;

        &:first-child
        {
            padding-top: 0;

            border-top: none;
        }
    }

    .block-jsdoc__augment-title,
    .block-jsdoc__class-title
    {
        margin-right: 10px;

        color: $greyColor;
    }

    .block-jsdoc__augments-description,
    .block-jsdoc__class-description,
    .block-jsdoc__block-description
    {
        margin-bottom: 15px;
    }

    .block-jsdoc__toc-item
    {
        line-height: 22px;
    }

    .block-jsdoc__toc-entity
    {
        font-size: 18px;
    }

    &__toc-title
    {
        margin-left: 20px;

        color: $greyColor;
    }

    .block-jsdoc__toc-link
    {
        margin-left: 40px;

        color: #01b;
    }

    .block-jsdoc__methods-title
    {
        padding-top: 10px;
        margin-top: 0;

        border-top: $yellowBorder;
    }

    .block-jsdoc__method
    {
        padding: 10px 0;

        &:after
        {
            content: '';

            display: block;

            width: 100%;
            height: 1px;

            border-bottom: 1px solid #e5e5e5;
        }

        &:last-child:after
        {
            display: none;
        }
    }

    .block-jsdoc__method-title
    {
        font-size: 18px;

        padding-bottom: 20px;

        &:last-child
        {
            padding-bottom: 10px;
        }
    }

    .block-jsdoc__method-name
    {
        font-weight: bold;

        position: relative;
    }

    .block-jsdoc__method-href
    {
        position: relative;

        vertical-align: middle;

        .anchor
        {
            left: -23px;

            width: 24px;
            height: 16px;

            /* hack for Fx which doesn't work well with opacity in this case */
            display: none;

            opacity: 1;

            .block-jsdoc__method-name:hover &,
            .block-jsdoc__block-name:hover &
            {
                display: block;
            }
        }
    }

    .block-jsdoc__method-name,
    .block-jsdoc__params-list
    {
        margin-right: 5px;
    }

    .block-jsdoc__param_optional
    {
        color: $greyColor;
    }

    .block-jsdoc__method-returns
    {
        font-style: italic;
    }

    .block-jsdoc__method-labels
    {
        display: inline-block;
    }


    .block-jsdoc__method-label
    {
        display: inline-block;

        padding: 3px 5px;
        margin-left: 5px;

        background: #ffeba0;
        border-radius: 2px;
    }

    .block-jsdoc__desc-section
    {
        margin-bottom: 10px;
    }

    .block-jsdoc__section-title
    {
        margin-bottom: 10px;

        color: $greyColor;
    }

    .block-jsdoc__section-content
    {
        margin-left: 12px;
    }

    .block-jsdoc__deprecated .block-jsdoc__section-title
    {
        color: #ff6b6b;
    }

    .block-jsdoc__parameters .block-jsdoc__section-content
    {
        display: table;
    }

    .block-jsdoc__row
    {
        display: table-row;
    }

    .block-jsdoc__param-title,
    .block-jsdoc__param-description
    {
        display: table-cell;
    }

    .block-jsdoc__param-title
    {
        display: inline-block;

        min-width: 100px;
        padding-right: 15px;
    }

    .block-jsdoc__param-description
    {
        line-height: 22px;
        padding-bottom: 10px;
    }

    .block-jsdoc__param-type
    {
        font-style: italic;
    }
}
